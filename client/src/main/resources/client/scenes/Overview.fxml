      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>
   <HBox prefHeight="35.0" prefWidth="589.0">
      <ComboBox fx:id="participantsComboBox" prefWidth="150.0" promptText="Participants..." />
      <Button mnemonicParsing="false" onAction="#addExpense" text="Add Expense" />
