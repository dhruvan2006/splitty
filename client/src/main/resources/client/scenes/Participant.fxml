<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<GridPane prefHeight="250" prefWidth="450" alignment="center" hgap="10" vgap="10"
          fx:controller="client.scenes.ParticipantCtrl" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Configure Participant" textAlignment="CENTER"
           style="-fx-padding: 0 0 10 5;"
           GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
            <Font name="System Bold" size="30.0" />
        </font>
    </Label>
    <Label text="Name"
           GridPane.columnIndex="0" GridPane.rowIndex="1">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Label>

    <Label text="Email"
           GridPane.columnIndex="0" GridPane.rowIndex="2">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Label>

    <Label text="IBAN"
           GridPane.columnIndex="0" GridPane.rowIndex="3">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Label>

    <TextField promptText="Fill in your name" prefWidth="250"
               GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="nameField"/>
    <TextField promptText="Fill in your email"
               GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="emailField"/>
    <TextField promptText="Fill in your bank account number"
               GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="bnrField"/>

    <Button mnemonicParsing="false" text="Cancel" onMouseClicked="#Cancel"
            GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button mnemonicParsing="false" text="Finish" onMouseClicked="#HandleFinish"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>